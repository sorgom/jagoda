form#ttl(method="post", onsubmit="{{onsubmit}};return false;")
    .ttl
        {% for ilc, label, value in data[0:1] %}
        div
            p {{label}}
            textarea(rows=2, id="{{ilc}}", name="{{ilc}}", lang="{{ilc}}", maxlength="128", required=true) {{value}}
        {% endfor %}
        {% for ilc, label, value in data[1:] %}
        div
            p {{label}}
            textarea(rows=2, id="{{ilc}}", name="{{ilc}}", lang="{{ilc}}", maxlength="128") {{value}}
        {% endfor %}
    {% if info['STD'] %}
    input(type="hidden", name="STD", value="1")
    {% else %}
    input(type="checkbox", id="STD", name="STD")
    label(for="STD") use as standard title
    {% endif %} 
    input(type="hidden", name="tpc", value="{{tpc}}")
    input(type="hidden", name="STDABLE", value="{{info['STDABLE']}}")
    input(type="hidden", name="objId", value="{{objId}}")
    input(type="hidden", name="TTL", value="{{info['TTL']}}")
.buttons
    button(onclick="getGoogle()") google translate
    input(type="submit", form="ttl", value="save changes")
    p#popup_info 
