{% extends 'aut_base.jade' %}
block content
    #obj_top
        #obj_display
            //- .img.objImg
            img#objImg(src="{{obj['SRC']}}", alt="object {{objId}}")
            p#LABEL {{obj['LABEL']}}
            p#YEAR {{obj['YEAR']}}
            p#WLABEL {{obj['WLABEL']}}
            p#DIMS {{obj['DIMS']}}
        #obj_ed
            include _obj_values.jade
    .clr         
    span#objId(style="visibility: hidden;") {{objId}}
    h2 Images of object
    p.label Upload image files for object from your PC (klick or drag here):
    input.dropZone(type="file", multiple=true, onchange="uploadImgs(this, 'objImgs', {{objId}});", accept="{{acceptImgTypes}}") 
    p.label Re-order images of object:
    .imgDisplayFrame
        #objImgs.imgDisplay.objImgs
        .clr 
    p.label Unassigned images (drag up to assign):
    .imgDisplayFrame
        #freeImgs.imgDisplay
        .clr 
    script 
        | document.body.onload = () => { loadObjImgs('objImgs', {{objId}}); loadUnusedImgs('freeImgs'); }
         